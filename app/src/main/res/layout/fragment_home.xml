<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Input Long URL -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/ti_one"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_url"
        app:endIconMode="clear_text"
        app:helperText="@string/helper_url"
        app:helperTextEnabled="true"
        app:hintEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_text_post_url"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_load"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ti_one"
        android:layout_alignParentEnd="true"
        android:enabled="false"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:text="@string/str_load"
        app:icon="@drawable/ic_cloud_download" />

    <include layout="@layout/made_with_love" />

</RelativeLayout>